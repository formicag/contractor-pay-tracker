# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# AWS Configuration
# IMPORTANT: The report-guardian-api-dev-resources table is deployed in eu-west-1
# Using eu-west-2 will cause ResourceNotFoundException errors
AWS_REGION=eu-west-1
AWS_PROFILE=default

# DynamoDB
# NOTE: Use 'report-guardian-api-dev-resources' for the actual deployed table
# The 'contractor-pay-development' table doesn't exist - data is in report-guardian tables
DYNAMODB_TABLE_NAME=report-guardian-api-dev-resources

# S3
S3_BUCKET_NAME=contractor-pay-files-development-ACCOUNT_ID

# API Gateway (if using)
API_GATEWAY_URL=https://your-api-id.execute-api.eu-west-2.amazonaws.com/prod
